{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "outputDirectory": "src/spec",
    "specVersion": 3,
    "spec": {
      "servers": [
        {
          "url": "http://localhost:3000/",
          "description": "Local development"
        }
      ]
    }
  },
  "routes": {
    "routesDir": "src/spec"
  },
  "compilerOptions": {
    "baseUrl": "src"
  }
}
