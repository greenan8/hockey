{
  "name": "open-hockey",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "type": "commonjs",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.10",
    "@types/node-fetch": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "^8.13.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "nodemon": "^2.0.15",
    "openapi-typescript": "^5.2.0",
    "openapi-typescript-fetch": "^1.1.2",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "4.5.2"
  },
  "dependencies": {
    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "express-rate-limit": "^6.3.0",
    "helmet": "^5.0.2",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.7",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "tsoa": "^3.14.1",
    "typeorm": "0.3.6",
    "uuid": "^8.3.2",
    "winston": "^3.7.2"
  },
  "scripts": {
    "cp-oas": "cp ./src/oas/oas.json ./dist/oas/oas.json && cp ./src/oas/oas.html ./dist/oas/oas.html",
    "build": "tsoa spec-and-routes && tsc && npm run cp-oas",
    "serve": "ts-node -r tsconfig-paths/register dist/index.js",
    "serve-dev": "nodemon",
    "lint": "eslint . --ext .ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "nhl-client:build": "openapi-typescript ./src/features/clients/nhl/nhl.oas.json --output ./src/features/clients/nhl/nhl.generated.ts",
    "migration:generate": "./scripts/migration-generate.sh",
    "migration:up": "./node_modules/.bin/ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:run -d src/data/ormconfig.ts",
    "migration:down": "./node_modules/.bin/ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:revert -d src/data/ormconfig.ts"
  }
}
