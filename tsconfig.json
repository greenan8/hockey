{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "baseUrl": "src",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "transpileOnly": true
  },
  "exclude": ["node_modules"]
}
